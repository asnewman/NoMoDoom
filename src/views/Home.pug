extends Base
block content
  p Welcome, #{email}
  button(onclick="logout()") Logout
  h2 Services
  p These are the different services you can subscribe to:
  a(class="service" href="/reddit")
    img(src="https://www.redditinc.com/assets/images/site/reddit-logo.png" alt="reddit logo")
    p Reddit
    small Free
  a(class="service" href="/hackernews")
    img(src="https://boldlist.net/img/hacker-news-logo.jpg" alt="hacker news logo")
    p Hacker News
    small Free
  a(class="service")
    img(src="https://upload.wikimedia.org/wikipedia/commons/b/b8/YouTube_play_button_icon_%282013%E2%80%932017%29.svg" alt="youtube logo")
    p Youtube
    small Coming soon
  a(class="service")
    img(src="https://upload.wikimedia.org/wikipedia/commons/4/4f/Twitter-logo.svg" alt="youtube logo")
    p Twitter
    small Coming soon
  style.
    .service {
      width: 100px;
      display: inline-block;
      background-color: #161F27;
      padding: 10px 20px 20px;
      cursor: pointer;
      margin-right: 20px;
      margin-bottom: 20px;
      text-decoration: none;
      color: white;
    }

    .service:hover {
      text-decoration: none;
    }

    .service img {
      height: 50px;
      width: 50px;
    }
  script.
    function logout() {
      document.cookie = 'token=;expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      location.reload()
    }